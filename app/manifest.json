{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*.md",
        "https://*/*.md",
        "file://*/*.md"
      ],
      "js": [
        "scripts/injected.js"
      ],
      "css": [
        "styles/injected.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
